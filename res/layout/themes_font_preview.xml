<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/themes_preview_background"
    android:gravity="center"
    android:padding="42dp"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="32dp">

    <TextView
        android:id="@+id/font_preview_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/preview_text"
        android:text="The story of fluid and Lorem"/>

    <TextView
        android:id="@+id/font_preview_subheading"
        android:layout_below="@id/font_preview_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:textColor="@color/preview_text"
        android:text="Chapter 1: How Ipsum met Lorem"/>

    <TextView
        android:id="@+id/font_preview"
        android:layout_below="@id/font_preview_subheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:lineSpacingExtra="1sp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Euismod facilisis orci gravida imperdiet placerat sapien. Et risus consequat fluid sollicitudin tincidunt auctor. Ut vitae nulla nullam vitae ut pellentesque sit turpis. Augue mauris aliquet scelerisque mauris id vulputate amet. Lacus suscipit diam malesuada eleifend viverra."/>
</RelativeLayout>